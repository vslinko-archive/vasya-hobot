import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

from skype import Skype
from skype.ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '   get_chats(Authentication auth)'
  print '  Chat get_chat(Authentication auth, string name)'
  print '  User get_user(Authentication auth, string handle)'
  print '  Message send_message(Authentication auth, string chatName, string messageBody)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Skype.Client(protocol)
transport.open()

if cmd == 'get_chats':
  if len(args) != 1:
    print 'get_chats requires 1 args'
    sys.exit(1)
  pp.pprint(client.get_chats(eval(args[0]),))

elif cmd == 'get_chat':
  if len(args) != 2:
    print 'get_chat requires 2 args'
    sys.exit(1)
  pp.pprint(client.get_chat(eval(args[0]),args[1],))

elif cmd == 'get_user':
  if len(args) != 2:
    print 'get_user requires 2 args'
    sys.exit(1)
  pp.pprint(client.get_user(eval(args[0]),args[1],))

elif cmd == 'send_message':
  if len(args) != 3:
    print 'send_message requires 3 args'
    sys.exit(1)
  pp.pprint(client.send_message(eval(args[0]),args[1],args[2],))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
